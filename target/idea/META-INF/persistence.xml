<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
   xmlns="http://java.sun.com/xml/ns/persistence" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
   <persistence-unit name="idea">
      <!-- You can force a non-default JPA provider using one of these declarations -->
      <!--
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
      -->
      <!-- Use this data source name for Glassfish -->
      <!--
      <jta-data-source>jdbc/__default</jta-data-source>
      -->
      <!-- Use this data source name for JBoss AS -->
      <jta-data-source>java:/IdeaDS</jta-data-source>
	  <class>es.edu.upm.idea.entities.Clasification</class>
	  <class>es.edu.upm.idea.entities.Comment</class>
	  <class>es.edu.upm.idea.entities.IdeaState</class>
	  <class>es.edu.upm.idea.entities.IdeaClasification</class>
	  <class>es.edu.upm.idea.entities.Idea</class>
	  <class>es.edu.upm.idea.entities.AuctionState</class>
	  <class>es.edu.upm.idea.entities.Bid</class>
	  <class>es.edu.upm.idea.entities.Profile</class>
	  <class>es.edu.upm.idea.entities.Sale</class>
	  <class>es.edu.upm.idea.entities.User</class>

      <properties>
         <!-- Properties for Hibernate (default provider for JBoss AS) -->
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="true" /> 

         <!-- Properties for EclipseLink (default provider for GlassFish) -->
         <!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
         <property name="eclipselink.logging.level" value="FINE"/> -->

      </properties>
   </persistence-unit>
</persistence>
